{
  "name": "torqued-automation-bundle",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 4173",
    "shopify:deploy": "node scripts/build-shopify.mjs && node scripts/upload-to-shopify.mjs && node scripts/create-section.mjs",
    "shopify:validate": "node scripts/validate-theme.mjs",
    "validate:deployment": "node scripts/validate-deployment.mjs",
    "validate:quick": "node scripts/validate-deployment.mjs --quick",
    "validate:all": "node scripts/validate-deployment.mjs --all",
    "health:check": "node scripts/health-check.mjs",
    "test": "vitest",
    "test:playwright": "playwright test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "migrate-secrets": "node scripts/migrate-secrets.js --provider=aws",
    "optimize:bundle": "node scripts/optimize-bundle.mjs",
    "deploy:edge": "node scripts/deploy-edge.mjs",
    "analyze:bundle": "npx vite-bundle-analyzer",
    "performance:audit": "lighthouse http://localhost:4173 --output=json --output-path=./reports/lighthouse.json",
    "security:scan": "npm audit --audit-level moderate",
    "ai:optimize": "node scripts/ai-optimize.mjs"
  },
  "dependencies": {
    "@tanstack/react-query": "4.35.0",
    "express": "4.22.1",
    "ioredis": "5.3.2",
    "node-fetch": "3.3.2",
    "passport": "0.7.0",
    "passport-oauth2": "1.8.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-joyride": "2.5.0",
    "react-window": "1.8.7",
    "ws": "8.18.0",
    "zustand": "4.4.0"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "@types/react-window": "1.8.5",
    "@typescript-eslint/eslint-plugin": "8.18.2",
    "@typescript-eslint/parser": "8.18.2",
    "@vitejs/plugin-react": "5.1.1",
    "esbuild": "0.25.12",
    "eslint": "8.57.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.1.0",
    "lighthouse": "13.0.1",
    "prettier": "2.8.8",
    "typescript": "5.6.3",
    "vite": "5.4.21",
    "vite-bundle-analyzer": "0.7.0",
    "vitest": "1.6.1"
  },
  "overrides": {
    "esbuild": "0.25.12"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PublicPNWEK/TOrqued"
  }
}
